---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// Define getStaticPaths function
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post: any) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

// Fetch the specific post data
const { slug } = Astro.params;
const post = await getEntry("blog", slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}
const { title, summary, date, tags } = post.data;
const { Content } = await post.render();
---

<Layout title={title}>
  <main class="max-w-[700px] m-auto py-8 w-[90%] text-lg">
    <div class="flex flex-row items-center gap-4 text-sm mb-6">
      <div class="flex justify-between w-full items-center">
        <a href="/blog" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm rounded border border-border text-foreground hover:bg-foreground/10 transition-colors">
            <Icon name="mdi:arrow-back" size={20} />
            All Blogs
        </a>
      </div>
    </div>
    <h1 class="text-4xl font-bold pb-2">{title}</h1>
    <p class="text-lg">{summary}</p>
    <div class="flex gap-4 mt-6 text-sm w-full">
      <ul class="flex flex-row gap-2">
        {
          tags &&
            tags.map((tag: string) => (
              <li>
                <div class="text-xs px-2 py-1 rounded border border-border text-foreground-muted">{tag}</div>
              </li>
            ))
        }
      </ul>
      <div class="flex-shrink-0">{date}</div>
    </div>

    <div class="border-t border-border w-[50%] my-6"></div>
    <section class="prose max-w-none my-8">
      <Content />
    </section>
  </main>
</Layout>
