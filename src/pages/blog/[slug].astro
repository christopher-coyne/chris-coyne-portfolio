---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post: any) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const { slug } = Astro.params;
const post = await getEntry("blog", slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}
const { title, summary, date, tags } = post.data;
const { Content } = await post.render();
---

<Layout title={title}>
  <main class="max-w-[620px] m-auto py-8 w-[90%]">

    <a href="/blog" class="back-link">&larr; Back</a>

    <header class="mt-8 mb-10">
      <h1 class="post-title">{title}</h1>
      {summary && <p class="text-foreground-muted text-[18px] mt-3 leading-relaxed">{summary}</p>}
      <div class="flex items-center gap-3 mt-5 text-[14px] text-foreground-muted">
        <time>{date}</time>
        {tags && tags.length > 0 && (
          <>
            <span class="opacity-40">Â·</span>
            {tags.map((tag: string, i: number) => (
              <span>{tag}{i < tags.length - 1 ? ", " : ""}</span>
            ))}
          </>
        )}
      </div>
    </header>

    <div class="post-divider"></div>

    <section class="prose max-w-none my-10 text-base leading-[1.8]">
      <Content />
    </section>
  </main>
</Layout>

<style>
  .back-link {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-text);
  }

  .post-title {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.15;
  }

  .post-divider {
    width: 3rem;
    height: 2px;
    background: linear-gradient(to right, #d946ef, #f43f5e, #9333ea);
    border-radius: 2px;
  }
</style>
