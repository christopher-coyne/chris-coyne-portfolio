---
interface Props {
  title: string;
  body: string;
  href: string;
  date: string;
  tags: string[];
}

import { Icon } from "astro-icon/components";
const { href, title, body, date, tags } = Astro.props;

---

{/* card for blog posts */}
<a
  href={href}
  class="flex flex-row justify-between rounded-lg group border-2 border-primary/30 hover:bg-primary/5"
>
  <div class="flex flex-col gap-2 p-4">
    <div class="font-semibold text-xl title">
      {title}
    </div>
    <p>
      {body}
    </p>
    <div class="flex flex-row gap-2 pt-4">
      <div class="flex flex-row gap-2">
        {tags.map((tag) => <div class="badge badge-primary">{tag}</div>)}
      </div>
    </div>
  </div>
  <div class="flex items-center justify-center px-4">
    <span
      class="icon-transform duration-300 transition-transform group-hover:translate-x-2"
    >
      <Icon name="mdi:arrow-right" size={24} />
    </span>
  </div>
</a>
