---
interface Props {
  src: string;
  subtitle?: string;
  reference?: string
}

import "@fontsource/open-sans/400-italic.css";

const { src, subtitle } = Astro.props;
---

<div>
  <img src={src} alt="Description of image" class="w-full rounded-sm" />
  {subtitle && <p class="text-sm pl-4 italic">{subtitle}</p>}
</div>
